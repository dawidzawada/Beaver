{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@screen/*": [
        "src/screen/*"
      ],
      "@store/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./__tests__/**/*",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

{
  "name": "beaver",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "eslint .",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "build:detox": "detox build --configuration ios.release",
    "test:detox": "detox test --configuration ios.release",
    "test:component": "jest --watchAll --testPathPattern=__tests__/component",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.21.0",
    "expo": "~50.0.14",
    "expo-constants": "~15.4.5",
    "expo-dev-client": "~3.3.11",
    "expo-font": "~11.10.3",
    "expo-linking": "~6.2.2",
    "expo-modules-core": "~1.11.13",
    "expo-router": "~3.4.8",
    "expo-status-bar": "~1.11.1",
    "i18next": "^23.10.1",
    "intl-pluralrules": "^2.0.1",
    "react": "18.2.0",
    "react-i18next": "^14.1.0",
    "react-native": "0.73.6",
    "react-native-reanimated": "^3.8.1",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "^15.1.0",
    "react-native-unistyles": "^2.5.4",
    "react-native-uuid": "^2.0.2",
    "react-native-vector-icons": "^10.0.3",
    "react-native-vision-camera": "^3.9.2",
    "react-zlib-js": "^1.0.5",
    "zebra-striped": "^0.2.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@config-plugins/detox": "^8.0.0",
    "@testing-library/react-native": "^12.4.5",
    "@types/bun": "latest",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/react": "~18.2.45",
    "@types/react-native-vector-icons": "^6.4.18",
    "babel-plugin-module-resolver": "^5.0.0",
    "detox": "^20.20.1",
    "eslint": "8.57.0",
    "eslint-config-universe": "^12.0.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.11",
    "jest": "^29.3.1",
    "jest-expo": "~50",
    "prettier": "^3.2.5",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim": {
        "binaryPath": "bin/Exponent.app",
        "type": "ios.simulator",
        "name": "iPhone 15"
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "bun run lint:fix"
  },
  "private": true
}
